## Forwards ##
Match originalhost farnsworth exec "test ${HOST}x = benderx -o ${HOST}x = isengardx"
    ProxyCommand socat - UNIX-CLIENT:${HOME}/.ssh/farnsworth.sock
    # Hostname localhost
    # Port 2220

Host farnsworth-isengard
    ProxyCommand ssh isengard socat - UNIX-CLIENT:/u/pa/sh/ndantam/.ssh/farnsworth.sock


# Use for the persistent connection... but forwards and tunnels don't
# work from jumpbox
Host autojump
    Hostname jumpbox.mines.edu
    ServerAliveInterval 180
    ServerAliveCountMax 3
    TCPKeepAlive no
    ForwardAgent no
    ForwardX11 no
    ControlMaster yes

Host autobender
    Hostname ndantam-workstation.mines.edu
    ServerAliveInterval 180
    ServerAliveCountMax 3
    TCPKeepAlive no
    ForwardAgent no
    ForwardX11 no
    ControlMaster yes
    # SOCKS
    #DynamicForward 1080
    # CIFS
    #LocalForward 4450 home.mines.edu:445
    # SSH
    # RemoteForward 2220 localhost:22
    RemoteForward ${HOME}/.ssh/farnsworth.sock localhost:22

Host autoisengard
    Hostname isengard.mines.edu
    ServerAliveInterval 180
    ServerAliveCountMax 3
    TCPKeepAlive no
    ForwardAgent no
    ForwardX11 no
    ControlMaster yes
    # CIFS
    LocalForward 4450 home.mines.edu:445
    # SOCKS
    DynamicForward 1080
    # SSH
    # TODO: find a robust way to reverse forward a unix socket
    # RemoteForward 2220 localhost:22
    #StreamLocalBindUnlink Yes
    #RemoteForward /u/pa/sh/ndantam/.ssh/farnsworth.sock localhost:22
