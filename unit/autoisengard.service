[Unit]
Description=Keeps a tunnel to 'isengard' open
After=network.target
Requires=autojump.service

[Service]
User=ntd
Restart=always
RestartSec=15
ExecStartPre=/bin/sh -c "while [ ! -S /home/ntd/.ssh/master-ndantam@jumpbox.mines.edu:22 ]; do sleep 1; done"
ExecStart=/usr/bin/autossh -NT autoisengard

[Install]
WantedBy=multi-user.target
